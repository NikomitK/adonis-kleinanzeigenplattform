            <a href="/chat/{{ chat.listing_id }}/{{ user.username }}" class="chat">
                <img src="/anzeigen/{{ chat.path }}" alt=""><span><h3>{{ chat.other }}</h3> ({{ chat.title }})</span>
            </a>
        </li>
        @end
    </ul>
    @end
</div>