    @end
    @if(ownChats.length != 0)
    <h2>Chats zu deinen Anzeigen:</h2>
    <ul class="chatlist">
        @each(chat in ownChats)
        <li>
            <a href="/chat/{{ chat.listing_id }}/{{ chat.username }}" class="chat">
