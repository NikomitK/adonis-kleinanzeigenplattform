<div class="container-fluid" id="nav-search-row">

    <div class="container py-2">
        <form class="col-6 m-auto d-flex flex-column flex-sm-row justify-content-center" role="search" method="post">
            {{ csrfField() }}
            <input name="search" class="form-control me-2 w-100 w-sm-30" type="search" placeholder="Search" aria-label="Search" value="{{ search ?? '' }}"/>
            <button class="btn btn-secondary" type="submit">Search</button>
        </form>
    </div>
</div>